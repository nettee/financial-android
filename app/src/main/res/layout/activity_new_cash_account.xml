<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <include layout="@layout/toolbar_new_account"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height_large"
        >

        <ImageView style="@style/AccountIcon"
            android:id="@+id/new_cash_account_name_image"
            android:src="@drawable/ic_wallet"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_name_cash"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/new_cash_account_name_image"
            android:layout_marginStart="@dimen/margin_horizontal"
            />

    </android.support.constraint.ConstraintLayout>

    <include layout="@layout/remark_input_bar"/>

    <include layout="@layout/divider_bar_large" />

    <include layout="@layout/account_amount_input_bar"/>

    <include layout="@layout/button_save"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_input_large"
        android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/entry_account_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/margin_horizontal"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_bank_icbc"
        />

    <TextView
        android:id="@+id/entry_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/entry_account_remark"
        app:layout_constraintStart_toEndOf="@id/entry_account_image"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="工商银行"
        />

    <TextView
        style="@style/Remark"
        android:id="@+id/entry_account_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/entry_account_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/entry_account_name"
        tools:visibility="visible"
        tools:text="借记卡 9395"
        />

    <EditText
        style="@style/Input"
        android:id="@+id/entry_amount_content"
        android:gravity="center_vertical|end"
        android:hint="@string/hint_money_amount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_input"
        android:layout_marginEnd="@dimen/margin_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</android.support.constraint.ConstraintLayout>
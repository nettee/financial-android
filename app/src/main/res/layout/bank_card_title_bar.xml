<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/caption_height_large"
    >
    <ImageView
        style="@style/AccountIcon"
        android:id="@+id/account_name_image"
        android:src="@drawable/ic_bank_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_horizontal"
        />
    <TextView
        android:id="@+id/account_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_name_credit_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/account_name_image"
        android:layout_marginStart="@dimen/margin_horizontal"
        />
    <TextView
        android:id="@+id/account_bank_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="工商银行"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin_horizontal"
        />
    <ImageView
        style="@style/AccountIcon"
        android:id="@+id/account_bank_image"
        android:src="@drawable/ic_bank_icbc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/account_bank_text"
        android:layout_marginEnd="@dimen/margin_horizontal"
        />
</android.support.constraint.ConstraintLayout>
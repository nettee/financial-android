<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="InputLines">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:divider">@drawable/default_divider</item>
        <item name="android:dividerPadding">@dimen/margin_horizontal</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="AccountIcon">
        <item name="android:layout_width">@dimen/account_icon_size</item>
        <item name="android:layout_height">@dimen/account_icon_size</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    
    <style name="AccountCardButton">
        <item name="android:background">@drawable/button_transparent</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="AccountCardImage">
        <item name="android:background">@drawable/account_card_image_container</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/account_card_image_padding</item>
    </style>

    <style name="DarkActionButton">
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="InputCaption">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="Input">
        <item name="android:background">@null</item>
    </style>

    <style name="MoneyAmountEditText">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:hint">@string/hint_money_amount</item>
        <item name="android:background">@null</item>
    </style>

</resources>
